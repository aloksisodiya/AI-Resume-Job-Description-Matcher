# Server Configuration
PORT=
NODE_ENV=development

# Database
MONGODB_URI=
# OR use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/resume-matcher

# JWT Secret 
JWT_SECRET=your_jwt_secret_here_replace_this

# Frontend URL
CLIENT_URL=

# Email Configuration (Gmail)
# Get App Password from: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=

# Ollama/LLaMA Configuration (for AI suggestions)
# Install Ollama from: https://ollama.com/download
# Then run: ollama pull llama3.2
# Note: Use 127.0.0.1 instead of localhost to avoid IPv6 issues
OLLAMA_API_URL=
OLLAMA_MODEL=

# Enable/Disable LLaMA AI suggestions (set to 'false' for fast mode - 5 seconds)
# true = Use LLaMA (slower, 10-15s, better suggestions)
# false = Fast mode (faster, 3-5s, basic suggestions)
USE_LLAMA=

